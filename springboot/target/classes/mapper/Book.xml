<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.BookMapper">



    <insert id="save">
        insert into book(name,description,publish_date,author,publisher,category,book_isbn,cover)
        values(#{name},#{description},#{publishDate},#{author},#{publisher},#{category},#{bookIsbn},#{cover})
    </insert>
    <delete id="deleteById">
        delete from book where id = #{id}
    </delete>
    <update id="updateById">
        update book set name = #{name},description=#{description},publish_date=#{publishDate},author=#{author},publisher=#{publisher},category=#{category},book_isbn=#{bookIsbn},cover=#{cover},updatetime=#{updatetime} where id = #{id}
    </update>
    <select id="list" resultType="com.example.springboot.entity.Book">
        select * from book order by id desc
    </select>
    <select id="listByCondition" resultType="com.example.springboot.entity.Book">
        select * from book
        <where>
            <if test="name != null and name != ''">
                name like concat('%',#{ name }, '%')
            </if>

            <if test="book_isbn !=null and book_isbn!=''">
                and book_isbn = #{ bookIsbn }
            </if>
        </where>
        order by id DESC
    </select>
    <select id="getById" resultType="com.example.springboot.entity.Book">
        select * from book where id = #{id}
    </select>

</mapper>